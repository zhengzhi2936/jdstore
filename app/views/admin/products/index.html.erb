<h2> Product List </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增商品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
      <th>category</th>
      <th width="100px"> Options </th>
      <th>timestamp</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do|product| %>
    <tr>
      <td>
        <%= product.id %>
      </td>
      <td>
        <%= link_to product_path(product) do %>
          <% if product.photos.present? %>
            <%#= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          <% end %>
        <% end %>
      </td>
      <td>
        <%= product.title%>
      </td>
      <td>
        <%= product.price%>
      </td>
      <td>
        <%= product.category.name %>
      </td>
      <td>
        <%= link_to("Edit", edit_admin_product_path(product )) %> |<br>
        <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
      </td>
      <td> <%= local_time(product.created_at)%></td>
    </tr>
    <% end %>
  </tbody>
</table>
